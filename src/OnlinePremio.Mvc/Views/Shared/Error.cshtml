@model ErrorViewModel
@{
    ViewData["Title"] = "Erro imprevisto";
}

@{
    if (Model == null)
    {
        <div>
            <h2>ATENÇÃO! Ocorreu um erro, mas fique calmo. Nosso time será avisado e corrigirá em breve!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}
